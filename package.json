{
    "name": "@fstm-at/root",
    "private": true,
    "scripts": {
        "frontend:dev": "yarn workspace @fstm-at/frontend dev",
        "frontend:build": "yarn workspace @fstm-at/frontend build",
        "frontend:start": "yarn workspace @fstm-at/frontend start",
        "cms:dev": "yarn workspace @fstm-at/cms dev",
        "cms:build": "yarn workspace @fstm-at/cms build",
        "cms:start": "yarn workspace @fstm-at/cms start",
        "maintenance:dev": "serve ./packages/frontend/static/maintenance",
        "dev": "node ./scripts/dev.js",
        "build": "node ./scripts/build.js",
        "start": "node ./scripts/start.js",
        "format": "prettier --write .",
        "lint": "yarn workspace @fstm-at/frontend lint"
    },
    "workspaces": [
        "packages/*"
    ],
    "packageManager": "yarn@4.4.1",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "pm2": "^6.0.8",
        "prettier": "^3.5.3",
        "serve": "^14.2.5"
    }
}
